{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "target": "esnext",
    "types": [
      "node",
    ]
  },
  "include": ["./src"]
}